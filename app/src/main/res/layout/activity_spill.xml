<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SpillActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOppgaver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="5 + 7 = ?"
        android:textAlignment="center"
        android:textColor="#0E33E3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/txtSvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Her vil svar skrives inn"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOppgaver" />

    <Button
        android:id="@+id/btnEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="btnEn"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSvar" />

    <Button
        android:id="@+id/btnTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="btnTo"
        android:text="2"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnTre"
        app:layout_constraintStart_toEndOf="@+id/btnEn"
        app:layout_constraintTop_toBottomOf="@+id/txtSvar" />

    <Button
        android:id="@+id/btnTre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="btnTre"
        android:text="3"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTo"
        app:layout_constraintTop_toBottomOf="@+id/txtSvar" />

    <Button
        android:id="@+id/btnFire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnFire"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEn"
        app:layout_constraintEnd_toStartOf="@+id/btnFem"/>

    <Button
        android:id="@+id/btnFem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnFem"
        android:text="5"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btnFire"
        app:layout_constraintTop_toBottomOf="@+id/btnTo"
        app:layout_constraintEnd_toStartOf="@id/btnSeks"/>

    <Button
        android:id="@+id/btnSeks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnSeks"
        android:text="6"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btnFem"
        app:layout_constraintTop_toBottomOf="@+id/btnTre"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnSju"
        android:text="7"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFire"
        app:layout_constraintEnd_toStartOf="@+id/btnOtte"/>

    <Button
        android:id="@+id/btnOtte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnOtte"
        android:text="8"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btnSju"
        app:layout_constraintTop_toBottomOf="@+id/btnFem"
        app:layout_constraintEnd_toStartOf="@id/btnNi"/>

    <Button
        android:id="@+id/btnNi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnNi"
        android:text="9"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btnOtte"
        app:layout_constraintTop_toBottomOf="@+id/btnSeks"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnNull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnNull"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOtte" />

    <Button
        android:id="@+id/btnFjern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="btnFjern"
        android:text="fjern"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLever"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNull" />

    <Button
        android:id="@+id/btnLever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="btnLever"
        android:text="Lever"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnFjern"
        app:layout_constraintTop_toBottomOf="@+id/btnNull" />

</androidx.constraintlayout.widget.ConstraintLayout>